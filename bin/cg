#!/bin/bash
# cg - config-git

SCOPE="--local"

git config $SCOPE user.name         "Murali Suresh"
git config $SCOPE diff.tool         "meld"
git config $SCOPE credential.helper   "cache --timeout=80000"
# for office pass an argument
if [[ -z $1 ]]; then
    echo Setting Home settings
    git config $SCOPE user.email          "muralisc@gmail.com"
    git config $SCOPE credential.username "muralisc"
else
    echo Setting Office settings
    git config $SCOPE user.email          "murali.suresh@sap.com"
    git config $SCOPE credential.username "i330301"
fi
