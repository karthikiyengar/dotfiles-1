#!/bin/bash
rsync -aPvh \
  -n \
  --info=copy,del,progress2,stats \
  --exclude='.*'  \
  /media/Murali_Transcend/mylap/ \
  /home/murali/

echo "$(tput setaf 4)Proceed with the sync?$(tput sgr0)"
read

rsync -aPvh \
  --info=copy,del,progress2,stats \
  --exclude='.*'  \
  /media/Murali_Transcend/mylap/ \
  /home/murali/
