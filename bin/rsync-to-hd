#!/bin/bash
echo "Doing a dry run first"
rsync -aPvh \
  -n \
  --info=copy,del,progress2,stats \
  --delete \
  --exclude='.*'  \
  --exclude='kubernetes/'  \
  /home/murali/ /media/Murali_Transcend/mylap/

echo "$(tput setaf 4)Proceed with the sync?$(tput sgr0)"
read

rsync -aPvh \
  --info=copy,del,progress2,stats\
  --delete \
  --exclude='.*'\
  /home/murali/ /media/Murali_Transcend/mylap/
