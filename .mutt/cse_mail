# Recieve options
set imap_user="muralis"
set folder="imaps://imap.cse.iitb.ac.in/"
set spoolfile="imaps://imap.cse.iitb.ac.in/INBOX"
set postponed="=Drafts"
set record="+INBOX.Sent"
# set imap_pass=$cse_pass
source "gpg2 -dq /home/murali/.pass.gpg |"

# sent options
set smtp_url="smtp://muralis@smtp.cse.iitb.ac.in" #smtp_pass=
