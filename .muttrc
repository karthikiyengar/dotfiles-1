# set signature="sign.txt"
#
source "gpg2 -dq $HOME/.my_pass.gpg |"


color hdrdefault white black  # headers white on black
color header brightgreen black ^From:  # sender's name in green
color quoted cyan black  # quoted text in blue
color signature red black   # signature in red

set sidebar_width=38
set sidebar_visible=yes
set imap_check_subscribed
set imap_list_subscribed

# ACCOUNT 1
source "~/.mutt/cse_mail"
folder-hook $folder 'source ~/.mutt/cse_mail'

# ACCOUNT 2
source "~/.mutt/iitb_mail"
folder-hook $folder 'source ~/.mutt/iitb_mail'


