# This script is used on imaps server. Along with m file.

set ssl_starttls=yes
set ssl_force_tls=yes

## Editor
set editor = "vim -c 'set spell spelllang=en syntax=mail ft=mail enc=utf-8' '+/^$'"

## Muttrc file for ee and gpo accounts.

mailboxes 'imaps://imap.iitb.ac.in'

## Folder hooks
folder-hook imaps://imap.iitb.ac.in " \
  set \
  folder='imaps://imap.iitb.ac.in/' \
  spoolfile='+INBOX' \
  record='+INBOX.Sent' \
  imap_user=muralis \
  imap_pass='' \
  postponed='+INBOX.Drafts' \
  smtp_url=smtp://muralis@smtp-auth.iitb.ac.in:25 \
  smtp_pass='' \
  from='muralis@iitb.ac.in' \
  use_from=yes \
  realname='Murali S' "


folder-hook imaps://imap.cse.iitb.ac.in " \
  set \
  folder='imaps://imap.cse.iitb.ac.in/' \
  spoolfile='+INBOX' \
  record='+INBOX.Sent' \
  imap_user=muralis \
  imap_pass='' \
  postponed='+INBOX.Drafts' \
  smtp_url=smtp://muralis@smtp.cse.iitb.ac.in:25 \
  smtp_pass='' \
  from='murali <muralis@cse.iitb.ac.in>' \
  realname='Murali S' "


set timeout=60	#Check for mail every minute
set mail_check=5
set sleep_time=0
set imap_check_subscribed


macro index <f2> '<change-folder>imaps://imap.cse.iitb.ac.in<enter>'
macro index <f3> '<change-folder>imaps://imap.iitb.ac.in<enter>'


